rule "SCORE: Bikeshare fallback if preferred bike not available"
salience 62
when
  $f : Fact(
      preferences.preferred_transport_modes != null,
      context.distance_to_destination_meters <= 5000,
      context.distance_to_next_bikesharing_station_meters >= 0,
      context.distance_to_next_bikesharing_station_meters <= 1000
  )
then
  java.util.List prefs = $f.getPreferences().getPreferred_transport_modes();
  boolean prefersBike = false;
  boolean ownsBike = $f.getPreferences().owns_non_electric_transport;
  boolean ownsEBike = $f.getPreferences().owns_e_bike;

  for (Object o : prefs) {
    if (o == null) continue;
    String p = o.toString().trim().toUpperCase().replace('-', '_').replace(' ', '_');
