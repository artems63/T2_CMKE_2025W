  if (prefersBike && !ownsBike && !ownsEBike && !$f.isDisqualified(Mode.BIKESHARE)) {
      $f.addScore(Mode.BIKESHARE, 30, "Preferred bike not available but a nearby bikesharing station exists.", drools.getRule().getName());
  }
end

// Final decision is made here
rule "DECIDE: Select highest score"
salience -10
when
  $f : Fact()
then
  Mode best = null;
  int bestScore = Integer.MIN_VALUE;
  int secondScore = Integer.MIN_VALUE;

  int feasibleCount = 0;
  int disqualifiedCount = 0;

  // Find best & count feasible
  for (java.util.Map.Entry<Mode, Integer> e : $f.getAllScores().entrySet()) {
    Mode m = e.getKey();

    if ($f.isDisqualified(m)) {
      disqualifiedCount++;
      continue;
    }

    feasibleCount++;

    int s = e.getValue();
    if (s > bestScore) {
      secondScore = bestScore;
      bestScore = s;
      best = m;
    } else if (s > secondScore) {
      secondScore = s;
    }
  }

  if (best == null) {
    $f.setRecommended(null);
    $f.setConfidenceScore(0.0);
    $f.getReasons().add("No feasible transport mode could be selected based on the given constraints.");
    $f.getRulesTriggered().add(drools.getRule().getName());

    return;
  }

  $f.setRecommended(best);

  // Count good alternatives (near best/good score)
  int plausibleCount = 0;
  final int PLAUSIBLE_GAP = 15;

  for (java.util.Map.Entry<Mode, Integer> e : $f.getAllScores().entrySet()) {
    Mode m = e.getKey();
    if ($f.isDisqualified(m)) continue;

    int s = e.getValue();
    if (bestScore - s <= PLAUSIBLE_GAP) {
      plausibleCount++;
    }
  }

  // Confidence factor
  // Score gap
  double gapNorm = 0.0;
  if (secondScore != Integer.MIN_VALUE) {
      gapNorm = Math.min(1.0, (double)(bestScore - secondScore) / 20.0);
  } else {
      gapNorm = 1.0;
  }

  // Alternative factor
  double alternativeFactor;
  if (feasibleCount <= 1) {
      alternativeFactor = 1.0;
  } else {
      int plausibleWithoutBest = plausibleCount - 1;

      if (Math.abs(bestScore - secondScore) < 1e-6) {
          alternativeFactor = 0.9;
      } else {
          alternativeFactor = 1.0 - ((double) plausibleWithoutBest / (double) (feasibleCount - 1));
          alternativeFactor = Math.max(0.0, alternativeFactor);
      }
  }

  // Hard exclusion
  int dqCount = 0;
  for (Mode m : Mode.values()) {
      if ($f.isDisqualified(m)) dqCount++;
  }
  double dqFactor = (double) dqCount / (double) Mode.values().length;

  // Final confidence
  double confidence =
      0.5 * alternativeFactor +
      0.3 * dqFactor +
      0.2 * gapNorm;

  confidence = Math.max(0.0, Math.min(1.0, confidence));

  $f.setConfidenceScore(confidence);

  String pretty = best.toString().toLowerCase().replace('_', ' ');
  pretty = pretty.substring(0, 1).toUpperCase() + pretty.substring(1);

  $f.getReasons().add(
      "Selected " + pretty +
      " because it was the most suitable option among " +
      feasibleCount + " feasible transport modes."
  );
  $f.getRulesTriggered().add(drools.getRule().getName());
end